{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://127.0.0.1:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Gym Lead Booker (Demo Mode)",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": false
      }
    },
    "windows": [
      {
        "title": "Gym Lead Booker (Demo Mode)",
        "width": 1200,
        "height": 900,
        "resizable": true
      }
    ],
    "bundle": {
      "active": false,
      "identifier": "com.demo.gymleadbooker"
    }
  }
}
